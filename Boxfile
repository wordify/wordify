global:
  env:
    - LARAVEL_ENV: production
web1:
  name: wordify
  shared_writable_dirs:
    - /storage/cache
    - /storage/database
    - /storage/logs
    - /storage/sessions
    - /storage/views
    - /storage/work
  document_root: /public
  php_version: 5.4.14
  php_extensions:
    - pdo_mysql
    - mcrypt
    - eaccelerator
    - memcached
    - curl
    - gd
  before_deploy:
    - "composer update"
    - "php artisan migrate:install"
    - "php artisan migrate"
  after_deploy:
    - "rm -f storage/cache/*"
    - "rm -f storage/views/*"